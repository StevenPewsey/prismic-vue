{
  "compilerOptions": {
    "strict": true,
    "skipLibCheck": true,

    "target": "esnext",
    "module": "esnext",
    "declaration": false,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,

    "jsx": "preserve",
    "lib": [
      "esnext",
      "dom"
    ],
    "types": [
      "jest",
      "node"
    ]
  },
  "exclude": [
    "node_modules",
    "dist",
    "examples"
  ]
}
